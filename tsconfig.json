{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // ✅ project root
    "paths": {
      "@/*": [
        "./*"
      ] // ✅ allows @/ to map to root
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/EDU/EducationTimeline.jsx",
    "components/FOOTER/components/githubCard.jsx",
    "app/EducationTimeline/page.jsx",
    "app/Header/Navbar.jsx",
    "lib/contexts/app-context.jsx",
    "app/layout.jsx",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
